<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order number</th>
      <th>Title</th>
      <th>Description</th>
      <th>Recieved</th>
      <th>Recieved by</th>
      <th>Approved</th>
      <th>Approved by</th>
      <th>Closed</th>
      <th>Closed by</th>
      <th>Remarks</th>
      <th>Status</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_number %></td>
        <td><%= order.title %></td>
        <td><%= order.description %></td>
        <td><%= order.recieved %></td>
        <td><%= order.recieved_by %></td>
        <td><%= order.approved %></td>
        <td><%= order.approved_by %></td>
        <td><%= order.closed %></td>
        <td><%= order.closed_by %></td>
        <td><%= order.remarks %></td>
        <td><%= order.status %></td>
        <td><%= order.actions %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

